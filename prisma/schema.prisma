generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// -----
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  age       Int
  role      Role
  babies    Baby[]
  chats     Chat[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  PARENT
  MOTHER
  OTHER
}

model Baby {
  id        String   @id @default(uuid())
  name      String
  height    Float
  weight    Float
  birthDate DateTime
  brand     String
  notes     String?
  gender    Gender   @default(OTHER)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Chat {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  messages  Message[]
}

model Message {
  id        String   @id @default(uuid())
  content   String
  role      String
  tokens    Int
  chatId    String
  chat      Chat     @relation(fields: [chatId], references: [id])
  createdAt DateTime @default(now())
}
